{
    "schema": {
        "type": "object",
        "title": "React Component Select Demo",
        "required": [
            "accessLevel",
            "colors",
            "country",
            "countries",
            "tags"
        ],
        "properties": {
            "name": {
                "title": "name",
                "type": "string"
            },
            "accessLevel": {
                "title": "Static Single Select",
                "type": "string"
            },
            "colors": {
                "title": "Static Multiple Select",
                "type": "array",
                "maxItems": 3
            },
            "country": {
                "title": "Dynamic Single Select",
                "type": "string"
            },
            "countries": {
                "title": "Dynamic Multiple Select",
                "type": "array"
            },
            "tags": {
                "title": "Adding words not in the dropdown",
                "type": "array",
                "minItems": 1,
                "maxItems": 5
            }
        }
    },
    "form": [
        "name",
        {
            "key": "accessLevel",
            "type": "rc-select",
            "multiple": false,
            "items": [
                {"A": "Authorized to anyone"},
                {"N": "Not Accessible"},
                {"C": "Client Based"},
                {"R": "Role Based"},
                {"U": "User Based"},
                {"CR": "Client and Role Based"},
                {"CU": "Client and User Based"},
                {"RU": "Role and User Based"},
                {"CRU": "Client, Role and User Based"}
            ]
        },
        {
            "key": "colors",
            "type": "rc-select",
            "multiple": true,
            "titleMap": [
                {"value": "Red", "name": "Red"},
                {"value": "Orange", "name": "Orange"},
                {"value": "Yellow", "name": "Yellow"},
                {"value": "Green", "name": "Green"},
                {"value": "Cyan", "name": "Cyan"},
                {"value": "Blue", "name": "Blue"},
                {"value": "Violet", "name": "Violet"}
            ]
        },
        {
            "key": "country",
            "type": "rc-select",
            "action": {
                "url" : "https://localhost:8443/r/data?name=country"
            }
        },
        {
            "key": "countries",
            "type": "rc-select",
            "multiple": true,
            "action": {
                "url" : "https://localhost:8443/r/data?name=country"
            }
        },
        {
            "key": "tags",
            "type": "rc-select",
            "multiple": true,
            "tags": true,
            "maxTagTextLength": 20,
            "action": {
                "url" : "data/testdata.json"
            }

        }
    ]
}
